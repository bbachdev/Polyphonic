{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "polyphonic",
  "version": "0.3.9",
  "identifier": "com.polyphonic.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Polyphonic",
        "width": 1920,
        "height": 1080,
        "visible": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**",
          "**/*"
        ]
      },
      "dangerousDisableAssetCspModification": ["style-src", "media-src"],
      "csp": "default-src 'self'; media-src 'self' http://127.0.0.1:38291 asset: https: data:; img-src 'self' data: asset: https:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' http: https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:music.db"
      ]
    }
  }
}